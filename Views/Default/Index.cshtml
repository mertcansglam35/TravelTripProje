@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>

	<div class="header-banner">
		<div class="wrap">
			<div class="banner">
				<div class="indent">
					<h2 class="indent-left margin-bot">Tatil & Seyahat Bloğum</h2>
					<div class="banner-left">
						<div class="con-text">
							<div class="grid1-img">
								<img src="~/web/images/glass.png" alt="">
							</div>
							<div class="grid1-desc">
								<p>Restourantlar</p>
							</div>
							<div class="clear"></div>
						</div>
						<div class="con-text">
							<div class="grid1-img">
								<img src="~/web/images/flight.png" alt="">
							</div>
							<div class="grid1-desc">
								<p>Uçuşlar</p>
							</div>
							<div class="clear"></div>
						</div>
						<div class="con-text">
							<div class="grid1-img">
								<img src="~/web/images/group.png" alt="">
							</div>
							<div class="grid1-desc">
								<p>Yapılacak Şeyler</p>
							</div>
							<div class="clear"></div>
						</div>
						<div class="con-text">
							<div class="grid1-img">
								<img src="~/web/images/key.png" alt="">
							</div>
							<div class="grid1-desc">
								<p>Araba Kiralama</p>
							</div>
							<div class="clear"></div>
						</div>
						<div class="clear"></div>
					</div>
					<div class="header_bottom_right_images">

						<div class="slider" style="width:650px!important;height:365px!important;">
							<ul class="rslides" id="slider1">
								@foreach (var x in Model)
								{
									<li><img src="@x.BlogImage" alt="" style="width:650px!important;height:365px!important;"></li>
								}
							</ul>
						</div>
					</div>
				</div>
				<div class="clear"></div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
	<div class"content">
		<div class="wrap">
			<div class="wrapper">
				<div class="con-top">
					<h3>Tatil Seyahat Bloğuma Hoşgeldiniz.</h3>
					<p>Bu projeyi Aralık 2021 tarihinde başlatıp Ocak 2022 tarihinde anasayfa düzenlemelerine getirdik.Gezip gördüğüm yerleri sizlerle paylaşmak için kodlamasını tamamen kendim yaptığım MVC5 üzerine kurulu dinamik bir web projesi geliştirdik.Hem türkiyeden hemde yurtdışından gezip gördüğüm yerleri blog yazıları olarak sizlerle paylaşma niyetindeyim.Umuyorum ki yazdıklarımı beğenirsiniz keyifli okumalar, sağlıklı günler dilerim.</p>
				</div>
				@Html.Action("Partial1", "Default")
				<div class="grids">
					<div class="box1">
						@Html.Action("Partial3", "Default")
						@Html.Action("Partial4", "Default")
						<div class="clear"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
</html>